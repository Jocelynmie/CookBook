{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/(assets|images)/(.*)",
      "dest": "frontend/dist/$1/$2"
    },
    {
      "src": "/(.+\\.[a-zA-Z0-9]{2,})$",
      "dest": "frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "app.js"
    }
  ],
  "env": {
    "VERCEL": "true",
    "NODE_ENV": "production"
  }
}
